<div id="login-container">
	{{#if status}}
	<div id="profile">
		<h2 class="text-red">{{firstName}} {{lastName}}</h2>
		<h4 class="text-gray">{{age}} years old</h4>
		<ul>
			<li><span>Address<span><span class="text-right">{{address}}</span></li>
			<li><span>Phone<span><span class="text-right">{{phone}}</span></li>
			<li><span>Education<span><span class="text-right">{{education}}</span></li>
			<li><span>Email<span><span class="text-right">{{email}}</span></li>
			<li><span>Country<span><span class="text-right">{{country}}</span></li>
		</ul>
	</div>
	{{else}}
	{{#if message}}
	<div class="login-error-box">
		<h2>{{message}}</h2>
	</div>
	{{/if}}

	<form id="login-form" action="profile" method="post">
		<fieldset>
			<legend>Login to your account</legend>
			<div class="login-item">
				<input id="login-email-field" type="email" name="email" placeholder="Email" autocomplete="on" required>
			</div>
			<div class="login-item">
				<input id="login-password-field" type="password" name="password" placeholder="Password" required>
			</div>
			<button id="login-submit-btn" form="login-form" type="submit">Login</button>

			<i><span class="text-gray">Not a member?</span><a class="login-register-link" href="/register">Register now!</a></i>
		</fieldset>
	</form>
	{{/if}}
</div>